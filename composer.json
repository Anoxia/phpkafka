{
    "name": "longyan/kafka",
    "description": "A kafka client. Support php-fpm and Swoole.",
    "require": {
        "php": ">=7.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.5",
        "colinodell/json5": "^2.1"
    },
    "autoload": {
        "psr-4": {
            "Longyan\\Kafka\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Longyan\\Kafka\\Test\\": "tests"
        }
    },
    "scripts": {
        "test": "./vendor/bin/phpunit",
        "swoole-test": "./swoole-phpunit",
        "test-coverage": "php -dzend_extension=xdebug ./vendor/bin/phpunit"
    }
}